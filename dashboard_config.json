{
  "node_id": "dashboard_distributed_001",
  "component": {
    "name": "real_zmq_dashboard_with_firewall",
    "version": "2.2.0",
    "mode": "distributed_orchestrator",
    "role": "dashboard_coordinator",
    "description": "Dashboard principal con monitoreo de errores UTF-8 y conectividad detallada"
  },
  "network": {
    "ml_events_input": {
      "address": "localhost",
      "port": 5570,
      "socket_type": "PULL",
      "mode": "connect",
      "high_water_mark": 5000,
      "expected_publishers": 1,
      "timeout_ms": 1000,
      "description": "Recibe eventos enriquecidos del lightweight_ml_detector"
    },
    "firewall_commands_output": {
      "address": "*",
      "port": 5580,
      "socket_type": "PUB",
      "mode": "bind",
      "high_water_mark": 2000,
      "expected_subscribers": 10,
      "timeout_ms": 1000,
      "description": "Envía comandos de firewall al simple_firewall_agent"
    },
    "firewall_responses_input": {
      "address": "*",
      "port": 5581,
      "socket_type": "PULL",
      "mode": "bind",
      "high_water_mark": 2000,
      "expected_publishers": 10,
      "timeout_ms": 1000,
      "description": "Recibe respuestas del simple_firewall_agent"
    },
    "admin_interface": {
      "address": "0.0.0.0",
      "port": 8080,
      "description": "Interfaz web del dashboard"
    }
  },
  "zmq": {
    "context_io_threads": 2,
    "max_sockets": 512,
    "tcp_keepalive": true,
    "tcp_keepalive_idle": 300,
    "tcp_keepalive_interval": 60,
    "tcp_keepalive_count": 3,
    "immediate": true,
    "linger_ms": 1000,
    "reconnect_interval_ms": 5000,
    "max_reconnect_interval_ms": 30000
  },
  "processing": {
    "threads": {
      "ml_events_consumers": 1,
      "firewall_command_producers": 1,
      "firewall_response_consumers": 1,
      "description": "Número de hilos de procesamiento para cada tipo de tarea"
    },
    "internal_queues": {
      "ml_events_queue_size": 1000,
      "firewall_commands_queue_size": 500,
      "firewall_responses_queue_size": 500,
      "max_event_history": 2000,
      "max_command_history": 1000,
      "description": "Tamaños de colas internas para buffers"
    },
    "performance": {
      "batch_size": 10,
      "max_processing_time_ms": 100,
      "backpressure_threshold": 0.8,
      "memory_threshold_mb": 512,
      "enable_flow_control": true
    }
  },
  "monitoring": {
    "stats_interval_seconds": 10,
    "detailed_metrics": true,
    "encoding_monitoring": {
      "enabled": true,
      "max_error_history": 100,
      "error_rate_threshold": 0.1,
      "alert_on_encoding_errors": true
    },
    "connectivity_monitoring": {
      "enabled": true,
      "heartbeat_interval_seconds": 30,
      "connection_timeout_seconds": 60,
      "max_connection_failures": 5
    },
    "performance_monitoring": {
      "enabled": true,
      "latency_threshold_ms": 100,
      "memory_check_interval_seconds": 30,
      "cpu_check_interval_seconds": 15
    }
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - [node_id:{node_id}] [pid:{pid}] - %(message)s",
    "handlers": {
      "console": {
        "enabled": true,
        "level": "INFO"
      },
      "file": {
        "enabled": true,
        "path": "logs/dashboard.log",
        "level": "DEBUG",
        "max_size_mb": 100,
        "backup_count": 5,
        "rotation": "time"
      }
    }
  },
  "security": {
    "enable_authentication": false,
    "allowed_origins": ["*"],
    "rate_limiting": {
      "enabled": false,
      "requests_per_minute": 1000
    },
    "encryption": {
      "enabled": false,
      "curve_keys": null
    }
  },
  "web_interface": {
    "enable_compression": true,
    "cache_static_files": true,
    "websocket_enabled": false,
    "real_time_updates": true,
    "max_connections": 100
  },
  "features": {
    "firewall_testing": {
      "enabled": true,
      "test_command_timeout_seconds": 30,
      "max_test_frequency_seconds": 10
    },
    "geolocation": {
      "enabled": true,
      "default_location": {
        "latitude": 40.4168,
        "longitude": -3.7038,
        "city": "Madrid",
        "country": "ES",
        "description": "Ubicación por defecto del nodo dashboard"
      }
    },
    "map_visualization": {
      "enabled": true,
      "max_markers": 100,
      "marker_cleanup_interval_seconds": 300,
      "heatmap_enabled": false
    },
    "encoding_diagnostics": {
      "enabled": true,
      "auto_detection": true,
      "fallback_strategies": [
        "utf-8",
        "protobuf",
        "latin-1",
        "ascii_clean"
      ]
    }
  },
  "error_handling": {
    "max_retries": 3,
    "retry_delay_seconds": 1,
    "circuit_breaker": {
      "enabled": true,
      "failure_threshold": 5,
      "timeout_seconds": 60,
      "half_open_max_calls": 3
    },
    "graceful_shutdown": {
      "enabled": true,
      "timeout_seconds": 30,
      "force_shutdown_after_seconds": 60
    }
  },
  "development": {
    "debug_mode": false,
    "mock_data": false,
    "simulation": {
      "enabled": false,
      "event_generation_rate": 1.0,
      "max_simulated_events": 1000
    }
  }
}