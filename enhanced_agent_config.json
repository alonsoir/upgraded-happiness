{
  "node_id": "promiscuous_agent_default_001",

  "zmq": {
    "output_port": 5559,
    "sndhwm": 2000,
    "linger_ms": 5000,
    "send_timeout_ms": 100
  },

  "backpressure": {
    "enabled": true,
    "max_retries": 3,
    "retry_delays_ms": [1, 2, 5],
    "drop_threshold_percent": 15.0,
    "activation_threshold": 50
  },

  "capture": {
    "interface": "any",
    "promiscuous_mode": true,
    "max_packets_per_second": 100,
    "min_packet_size": 20,
    "excluded_ports": [22, 80, 443],
    "included_protocols": ["tcp", "udp"],
    "filter_rules": []
  },

  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - [node_id:{node_id}] - %(message)s",
    "file": null
  },

  "monitoring": {
    "stats_interval_seconds": 30,
    "alerts": {
      "max_drop_rate_percent": 10.0,
      "max_backpressure_activations": 100
    }
  }
}