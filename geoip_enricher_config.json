    "output_port": 5560,
    "rcvhwm": 2000,
    "sndhwm": 2000,
    "recv_timeout_ms": 1000,
    "send_timeout_ms": 100,
    "linger_ms": 1000,
    "vertical_scaling_optimizations": {
      "io_threads": 1,
      "max_sockets": 128,
      "tcp_keepalive": true,
      "tcp_keepalive_idle": 300,
