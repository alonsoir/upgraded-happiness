    "handle_private_ips": true,
    "resolve_public_ip_for_private": true,
    "max_events_per_batch": 100,
    "batch_timeout_ms": 50,
    "worker_threads": 4,

    "vertical_scaling": {
      "optimized_for_i9_8cores": true,
      "memory_pool_size_mb": 256,
      "cpu_affinity_enabled": false,
      "prefetch_geoip_data": false,
