{
  "node_id": "geoip_enricher_default_001",

  "zmq": {
    "input_port": 5559,
    "output_port": 5560,
    "recv_timeout_ms": 1000,
    "send_timeout_ms": 100,
    "linger_ms": 5000
  },

  "backpressure": {
    "enabled": true,
    "max_retries": 2,
    "retry_delays_ms": [1, 5]
  },

  "processing": {
    "threads": 2,
    "internal_queue_size": 1000,
    "queue_put_timeout_seconds": 0.1,
    "queue_get_timeout_seconds": 1.0,
    "serialization": {
      "format": "json",
      "encoding": "utf-8"
    }
  },

  "geoip": {
    "lookup_method": "mock",
    "mock_coordinates": [40.4168, -3.7038],
    "use_default_coordinates_on_failure": true,
    "default_coordinates": [40.4168, -3.7038],
    "cache_size": 10000,
    "cache_ttl_seconds": 3600,
    "maxmind": {
      "database_path": "/path/to/GeoLite2-City.mmdb",
      "enabled": false
    },
    "api": {
      "url": "https://api.example.com/geoip/{ip}",
      "timeout_seconds": 2.0,
      "api_key": null,
      "enabled": false
    }
  },

  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - [node_id:{node_id}] - %(message)s",
    "file": null
  },

  "monitoring": {
    "stats_interval_seconds": 15,
    "alerts": {
      "max_queue_usage_percent": 80.0,
      "max_geoip_failure_rate_percent": 20.0
    }
  }
}